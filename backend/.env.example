# Base URL for the application (used for avatar URLs)
BASE_URL=http://localhost:3000

# Database configuration
DATABASE_URL=postgresql://your-username:your-password@localhost/your_database_name

# Admin user creation (for seeds.rb)
ADMIN_EMAIL=your-admin@example.com
ADMIN_PASSWORD=your-secure-password-here

# Production settings
# BASE_URL=https://your-domain.com

# OAuth Configuration
# Google OAuth (for user authentication)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# YouTube OAuth (for music platform integration)
YOUTUBE_CLIENT_ID=your-youtube-client-id
YOUTUBE_CLIENT_SECRET=your-youtube-client-secret

# Spotify OAuth (for music platform integration)
SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret

# SoundCloud OAuth (for music platform integration) 
SOUNDCLOUD_CLIENT_ID=your-soundcloud-client-id
SOUNDCLOUD_CLIENT_SECRET=your-soundcloud-client-secret
